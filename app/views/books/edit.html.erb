<h3>
<strong>
 Editing Book
</strong>
</h3>
<%= form_with model: @book do |f| %>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book' %>

<% end %>

<td><%= link_to "Show", book_path(@book.id) %></td> |
<td><%= link_to 'back', books_path%></td>

